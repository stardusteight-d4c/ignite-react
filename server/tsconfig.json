{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "watch": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true
  },
  "ts-node": {
    "transpileOnly": true
  },
  "include": ["src/**/*.ts"]
}
